<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgParent">

    <TextView
        android:id="@+id/titleDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textColor="@color/txtTitles"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"

        />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/bell_filled"
        app:tint="@color/icoColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/titleDashboard"
        android:layout_marginEnd="25dp"/>

    <View
        android:id="@+id/lineDivisora"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/titleDashboard"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/txtPresupuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MI PRESUPUESTO (2000.00)"
        app:layout_constraintTop_toBottomOf="@id/lineDivisora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="@color/txtSubTitle"
        />

    <!-- Falta, centrar todo bien el presupuesto, mas tarde lo are
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(2000.00)"
        app:layout_constraintTop_toTopOf="@id/txtPresupuesto"
        app:layout_constraintStart_toEndOf="@id/txtPresupuesto"/>

     -->

    <ImageView
        android:id="@+id/imgPresupuesto"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/img_example"
        app:layout_constraintTop_toBottomOf="@id/txtPresupuesto"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL\n GASTADO"
        android:textColor="@color/txtSubTitle"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/imgPresupuesto"
        app:layout_constraintStart_toEndOf="@id/imgPresupuesto"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        />

    <TextView
        android:id="@+id/txtMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S/\n 850.00"
        android:textColor="@color/txtSubTitle"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtTotal"
        app:layout_constraintStart_toStartOf="@id/txtTotal"
        />

    <TextView
        android:id="@+id/txtAhorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AHORRO"
        android:textColor="@color/txtSubTitle"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtMonto"
        app:layout_constraintStart_toStartOf="@id/txtMonto"/>

    <TextView
        android:id="@+id/txtPorcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0%"
        android:textColor="@color/txtSubTitle"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtAhorro"
        app:layout_constraintStart_toStartOf="@id/txtMonto"/>

    <TextView
        android:id="@+id/gastosRecientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gastos Recientes"
        android:textSize="16sp"
        android:textColor="@color/txtTitles"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgPresupuesto"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="21dp"/>

    <TextView
        android:id="@+id/VerTodos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver todos"
        android:textStyle="bold"
        android:textColor="@color/txtSubTitle"
        app:layout_constraintTop_toTopOf="@id/gastosRecientes"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gasolina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@id/gastosRecientes"
        android:layout_marginTop="10dp"
        >

        <FrameLayout
            android:id="@+id/gasolinera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/gasolinera"
                android:layout_gravity="center"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/primax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/gasolinera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="7dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/CeFamiliar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primax GNV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/10/2023"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/primax"
            app:layout_constraintBottom_toBottomOf="@+id/primax"
            android:layout_marginEnd="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- S/150.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transporte"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/SuperMercado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="@+id/gasolina"
        app:layout_constraintEnd_toEndOf="@+id/gasolina"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@id/gasolina"
        android:layout_marginTop="10dp"
        >

        <FrameLayout
            android:id="@+id/gasolinera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/cesta"
                android:layout_gravity="center"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/primax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/gasolinera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="7dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/CeFamiliar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plaza Vea"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/10/2023"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/primax"
            app:layout_constraintBottom_toBottomOf="@+id/primax"
            android:layout_marginEnd="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- S/565.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hogar"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Suscripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="@+id/SuperMercado"
        app:layout_constraintEnd_toEndOf="@+id/SuperMercado"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@id/SuperMercado"
        android:layout_marginTop="10dp"
        >

        <FrameLayout
            android:id="@+id/gasolinera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/cesta"
                android:layout_gravity="center"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/primax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/gasolinera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="7dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/CeFamiliar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suscripcion"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/10/2023"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/primax"
            app:layout_constraintBottom_toBottomOf="@+id/primax"
            android:layout_marginEnd="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- S/50.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entretenimiento"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">


        <LinearLayout
            android:id="@+id/incio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/inicio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ajustes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ajustes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ajustes" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/boletas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/incio"
            app:layout_constraintEnd_toStartOf="@+id/analisis">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/boleta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="boletas" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/analisis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ajustes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/boletas">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/analisis" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="analisis" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>